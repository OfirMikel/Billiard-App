<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corner"
    android:paddingTop="5sp"
    android:paddingBottom="20sp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/headLineDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts"
        android:text="@string/headlinedialogadd"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerStatic"
        app:layout_constraintEnd_toStartOf="@+id/spinnerStatic"
        app:layout_constraintTop_toTopOf="@+id/spinnerStatic" />

    <TextView
        android:id="@+id/spinnerStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/fonts"
        android:text="שולחנות פנוים"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/phoneStatic" />

    <TextView
        android:id="@+id/spinnerNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts"
        android:text="*בזמן הנבחר"
        android:textColor="#BFFFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStatic" />


    <EditText
        android:id="@+id/fullName"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/fonts"
        android:hint="שם מלא"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        android:textDirection="rtl"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/headLineDialog" />

    <TextView
        android:id="@+id/phoneStatic"
        android:layout_width="190sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/fonts"
        android:text="זמן הגעה משוער"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/continuedPhoneNum"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/continuedPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/fonts"
        android:gravity="center"
        android:hint="1234567"
        android:inputType="number"
        android:maxLength="7"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeOfArrivalStatic"
        app:layout_constraintEnd_toStartOf="@+id/timeOfArrivalStatic"
        app:layout_constraintTop_toTopOf="@+id/timeOfArrivalStatic"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/areaCodePhoneNum"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="3"
        android:fontFamily="@font/fonts"
        android:gravity="center"
        android:hint="050"
        android:inputType="number"
        android:maxEms="3"
        android:maxLength="3"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/continuedPhoneNum"
        app:layout_constraintEnd_toStartOf="@+id/timeOf"
        app:layout_constraintTop_toTopOf="@+id/continuedPhoneNum"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/timeOfArrival"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="00:00"
        android:textColor="@color/white"
        android:textColorHint="#99FFFFFF"
        android:textDirection="rtl"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneStatic"
        app:layout_constraintEnd_toStartOf="@+id/phoneStatic"
        app:layout_constraintTop_toBottomOf="@+id/continuedPhoneNum"
        tools:ignore="TextFields" />


    <TextView
        android:id="@+id/timeOfArrivalStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/fonts"
        android:text="מספר טלפון: "
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/timeOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/fonts"
        android:text="-"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/continuedPhoneNum"
        app:layout_constraintEnd_toStartOf="@+id/continuedPhoneNum"
        app:layout_constraintTop_toTopOf="@+id/continuedPhoneNum"
        tools:ignore="TextFields" />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#6E2C2C"
        android:paddingHorizontal="30sp"
        android:paddingVertical="10sp"
        android:text="שמור שולחן"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6E2C2C"
        android:paddingHorizontal="50sp"
        android:paddingVertical="10sp"
        android:text="בטל"
        app:layout_constraintBottom_toBottomOf="@+id/save"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:text="קראתי ואישרתי את תנאי השימוש ואת מדיניות העסק"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/spinnerNow" />


</androidx.constraintlayout.widget.ConstraintLayout>